pipeline {
    agent any

    options {
        timestamps() // Adds timestamps to console output
    }

    environment {
        DOCKER_HUB_CREDENTIALS = 'dockerhub-credentials'
        DOCKER_HUB_USER        = 'ghandrisemh'
        IMAGE_NAME             = 'ghandrisemh/angular-devops'
        IMAGE_TAG              = 'latest'

        SONARQUBE_ENV = 'SonarQube'
        BUILD_ENV     = 'PROD'
    }

    stages {
        // --------------------------
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    env.COMMIT_SHA = sh(returnStdout: true, script: 'git rev-parse --short HEAD').trim()
                }
            }
        }

        // --------------------------
        stage('Install Dependencies') {
            agent {
                docker {
                    image 'node:20'
                }
            }
            steps {
                echo "üì¶ Installing dependencies..."
                sh 'npm ci'
                stash includes: 'node_modules/**', name: 'node-modules'
            }
        }

        // --------------------------
        stage('Analyze & Build in Parallel') {
            parallel {
                stage('SonarQube Analysis') {
                    agent {
                        docker {
                            image 'sonarsource/sonar-scanner-cli:latest'
                            args '-u root --network=devops_network'
                        }
                    }
                    environment {
                        SONAR_HOST_URL = 'http://sonarqube:9000'
                        SONAR_TOKEN    = credentials('sonarqube')
                    }
                    when {
                        anyOf {
                            buildingTag()
                            branch 'master'
                            branch 'develop'
                            branch pattern: "feature/.*", comparator: "REGEXP"
                        }
                    }
                    steps {
                        script {
                            echo "üöÄ Scanning the project"
                            sh """
                                sonar-scanner \
                                  -Dsonar.projectKey=angular-devops \
                                  -Dsonar.projectName=angular-devops \
                                  -Dsonar.sources=src \
                                  -Dsonar.exclusions=node_modules/** \
                                  -Dsonar.typescript.tsconfigPath=tsconfig.json \
                                  -Dsonar.host.url=${SONAR_HOST_URL} \
                                  -Dsonar.login=${SONAR_TOKEN}
                            """
                        }
                    }
                }

                stage('Build & Test') {
                    agent {
                        docker {
                            image 'node:20'
                        }
                    }
                    steps {
                        unstash 'node-modules'
                        echo "üõ† Building project..."
                        sh 'npm run build-prod'
                        stash includes: 'dist/**', name: 'angular-devops-dist'
                    }
                }
            }
        }

        // --------------------------
        stage('Build Docker Image') {
            steps {
                unstash 'angular-devops-dist'
                script {
                    if (env.TAG_NAME) {
                        echo "üì¶ Building Docker image for tag: ${env.TAG_NAME}"
                        env.FINAL_IMAGE_TAG = "${env.TAG_NAME}"
                    } else {
                        echo "üì¶ Building Docker image for branch: ${env.BRANCH_NAME}"
                        env.FINAL_IMAGE_TAG = "${BUILD_ENV}-${COMMIT_SHA}"
                    }
                    sh "docker build -t ${IMAGE_NAME}:${env.FINAL_IMAGE_TAG} ."
                }
            }
        }

        // --------------------------
        stage('Push to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: "${DOCKER_HUB_CREDENTIALS}",
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                        sh "docker push ${IMAGE_NAME}:${env.FINAL_IMAGE_TAG}"
                    }
                }
            }
        }

        // --------------------------
        stage('Update Deployment File') {
            agent any
            environment {
                GIT_REPO_NAME = "angular-devops"
                GIT_USER_NAME = "TyreX6"
            }
            when {
                branch pattern: ".*", comparator: "REGEXP" // any branch
            }
            steps {
                script {
                    catchError(buildResult: 'SUCCESS', stageResult: 'ABORTED') {
                        def proceed = input(
                            message: "Update Deployment file on Repo?",
                            ok: "Update",
                            parameters: [booleanParam(defaultValue: false, description: '', name: 'UPDATE')]
                        )

                        if (!proceed) {
                            echo "‚è≠Ô∏è Skipped Update Deployment file"
                            return
                        }

                        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {

                            // ‚úÖ 1. Validate commit SHA
                            if (!env.COMMIT_SHA) {
                                error "‚ùå Missing COMMIT_SHA"
                            }

                            echo "üîß Configuring Git user"
                            sh 'git config user.email "ghandrisemh@gmail.com"'
                            sh 'git config user.name "Ghandri Sameh"'

                            echo "üì• Fetching & checking out branch: ${env.BRANCH_NAME}"
                            sh """
                                git fetch origin
                                git checkout ${env.BRANCH_NAME}
                                git pull --rebase origin ${env.BRANCH_NAME} || true
                            """

                            // ‚úÖ 2. Determine tag
                            env.NEW_TAG = env.TAG_NAME ? env.TAG_NAME : "${env.BUILD_ENV}-${env.COMMIT_SHA}"
                            echo env.TAG_NAME ? "üìå Detected tag build: ${env.NEW_TAG}" : "üåø Detected branch build: ${env.NEW_TAG}"

                            // ‚úÖ 3. Update values.yaml (Groovy instead of sed)
                            def valuesFile = "helm/app/values.yaml"
                            def fileContent = readFile(valuesFile)
                            def updatedContent = fileContent.replaceAll(/tag:\s*.*/, "tag: ${env.NEW_TAG}")
                            writeFile file: valuesFile, text: updatedContent

                            echo "üìù Committing changes to ${valuesFile}"
                            sh """
                                git add ${valuesFile}
                                git commit -m "Update deployment image to version ${env.NEW_TAG}" || echo "No changes to commit"
                                git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:refs/heads/${env.BRANCH_NAME}
                            """

                            // ‚úÖ 4. Create tag only for master branch
                            if (env.BRANCH_NAME == "master") {
                                echo "üè∑Ô∏è Creating new tag: ${env.NEW_TAG}"
                                sh """
                                    git tag ${env.NEW_TAG}
                                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git ${env.NEW_TAG}
                                """
                            } else {
                                echo "‚ÑπÔ∏è Not on master branch ‚Äî skipping PROD tag creation."
                            }
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
